# CalcInvest Environment Configuration
# Copy this file to .env and update the values as needed

# Application Environment
NODE_ENV=development
VITE_APP_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Authentication
VITE_JWT_SECRET=your-super-secret-jwt-key-here
VITE_JWT_EXPIRES_IN=24h
VITE_REFRESH_TOKEN_EXPIRES_IN=7d

# Database Configuration (Backend)
DATABASE_URL=postgresql://username:password@localhost:5432/calcinvest
REDIS_URL=redis://localhost:6379

# External APIs
VITE_ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
VITE_FINNHUB_API_KEY=your-finnhub-api-key
VITE_YAHOO_FINANCE_API_KEY=your-yahoo-finance-api-key
VITE_QUANDL_API_KEY=your-quandl-api-key

# Email Configuration (Backend)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@calcinvest.com

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_UPLOAD_PATH=/uploads
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=calcinvest-uploads

# Analytics
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_MIXPANEL_TOKEN=your-mixpanel-token
VITE_HOTJAR_ID=your-hotjar-id

# Social Authentication
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info
VITE_ENABLE_LOGGING=true

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_MULTI_LANGUAGE=true
VITE_ENABLE_ADVANCED_CHARTS=true
VITE_ENABLE_EXPORT_PDF=true
VITE_ENABLE_SOCIAL_SHARING=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_BETA_FEATURES=false

# Security
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-key

# Cache Configuration
CACHE_TTL=3600
REDIS_CACHE_PREFIX=calcinvest:

# Development Tools
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_MOCK_API=false
VITE_MOCK_DELAY=1000

# Deployment
PORT=3000
HOST=0.0.0.0
BASE_URL=https://calcinvest.com
CDN_URL=https://cdn.calcinvest.com

# SSL Configuration
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=calcinvest-backups

# Notification Services
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Search Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=calcinvest

# Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5

# Internationalization
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,es,fr,de,pt,cs,hy
VITE_DEFAULT_CURRENCY=USD
VITE_SUPPORTED_CURRENCIES=USD,EUR,GBP,JPY,CAD,AUD,CHF

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=CalcInvest

# Content Security Policy
CSP_REPORT_URI=https://calcinvest.report-uri.com/r/d/csp/enforce

# API Rate Limiting
API_RATE_LIMIT_WINDOW=3600000
API_RATE_LIMIT_MAX=1000
API_RATE_LIMIT_SKIP_SUCCESSFUL=false

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We're currently performing scheduled maintenance. Please check back soon."